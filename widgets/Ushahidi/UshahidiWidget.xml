<configuration>
<!-- Clusterer Symbology -->

<clustering mingraphiccount="2" sizeinpixels="50">
	<clustersymbol  alpha="1" alphas="1,1,1" bordercolor="0x000000"
	                flaremaxcount="20" size="45" sizes="30,60,90"
	                textcolor="0xFFFFFF" textsize="14" weights="10,100,200"/>
</clustering>

<!-- <alerts>:  tag specifies alert messages. -->
<alerts>
	<noTitleFound alertheader="Alert" alertmessage="Please Select Category Title"/>
	<noResultsFound alertheader="Error" alertmessage="No results found." />
</alerts>

<!-- <proxyUrl>: tag specifies proxy url --> <!--The below proxy URL is temporary for testing-->
<proxyUrl>http://203.199.47.152/Hawk testing/commonproxy/proxy.ashx</proxyUrl>

<!-- <apiUrl>: tag specifies development url -->
<apiUrl>https://bnestorm.crowdmap.com</apiUrl>

<!-- <parameterName>: tag specifies request parameter -->
<parameterName>&by=catname&name=</parameterName>

<!-- tag specifies limit value parameter -->
<parameterLimitValue>400</parameterLimitValue>

<!-- tag specifies sort By Value parameter. A value of 0 sorts results in ascending order and a value of 1 sorts results in descending order . -->
<sortByValue>0</sortByValue>

<!-- tag specifies id Value parameter  -->
<idValue>0</idValue>

<!-- tag specifies orderField parameter  -->
<orderField>incidenttitle</orderField>

<!-- this tag is used to set the fist label in category title dropdown -->
<dropDownFirstLabel>All Categories</dropDownFirstLabel>

<!-- this tag is used to set the fist color in category title dropdown -->
<dropDownFirstColor>0xFF0000</dropDownFirstColor>
</configuration>